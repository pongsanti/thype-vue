{
  "name": "vue-browserify-template",
  "version": "0.1.0",
  "description": "A Vue.js project",
  "author": "pongsanti <pongsanti.tanvejsilp@gmail.com>",
  "private": true,
  "scripts": {
    "start": "node app.js",
    "watchify": "watchify -vd -p browserify-hmr -e src/main.js -o dist/build.js",
    "_serve": "http-server -o -c 1 -a localhost",
    "serve": "nodemon app.js",
    "dev": "npm-run-all --parallel watchify serve",
    "lint": "eslint --ext .js,.vue src test/unit",
    "test": "karma start karma.conf.js",
    "build": "cross-env NODE_ENV=production browserify -g envify -p [ vueify/plugins/extract-css -o dist/build.css ] -e src/main.js | uglifyjs -c warnings=false -m > dist/build.js"
  },
  "browserify": {
    "transform": [
      "babelify",
      "vueify"
    ]
  },
  "browser": {
    "vue": "vue/dist/vue"
  },
  "dependencies": {
    "babel-preset-es2015": "^6.0.0",
    "babelify": "^7.2.0",
    "body-parser": "^1.15.2",
    "browserify": "^13.1.0",
    "bulma": "^0.2.3",
    "cross-env": "^2.0.0",
    "envify": "^3.4.1",
    "express": "^4.14.0",
    "lodash": "^4.17.2",
    "mongodb": "^2.2.11",
    "uglify-js": "^2.5.0",
    "vue": "^2.0.1",
    "vueify": "^9.0.0"
  },
  "devDependencies": {
    "babel-core": "^6.0.0",
    "babel-plugin-transform-runtime": "^6.0.0",
    "babel-preset-stage-2": "^6.0.0",
    "babel-runtime": "^6.0.0",
    "browserify-hmr": "^0.3.1",
    "eslint": "^3.3.0",
    "eslint-config-standard": "^5.3.5",
    "eslint-plugin-html": "^1.5.2",
    "eslint-plugin-promise": "^2.0.1",
    "eslint-plugin-standard": "^2.0.0",
    "http-server": "^0.9.0",
    "jasmine-core": "^2.4.1",
    "karma": "^1.2.0",
    "karma-browserify": "^5.1.0",
    "karma-jasmine": "^1.0.2",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-spec-reporter": "0.0.26",
    "node-sass": "^3.13.0",
    "nodemon": "^1.11.0",
    "npm-run-all": "^2.3.0",
    "phantomjs-prebuilt": "^2.1.3",
    "proxyquireify": "^3.0.1",
    "vue-resource": "^1.0.3",
    "watchify": "^3.4.0"
  }
}
